{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "docker-build",
			"label": "docker-build",
			"platform": "python",
			"dockerBuild": {
				"tag": "msdocspythoncontainerwebapp:latest",
				"dockerfile": "${workspaceFolder}/Dockerfile",
				"context": "${workspaceFolder}",
				"pull": true
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: debug",
			"dependsOn": [
				"docker-build"
			],
			"dockerRun": { 
				"env": {
					"CONNECTION_STRING": "mongodb://mongoservice:27017",
					"DB_NAME": "restaurants_reviews",
					"COLLECTION_NAME": "restaurants_reviews"
				},
				"extraHosts":[{
					"hostname": "mongoservice",
					"ip": "<YOUR-IP-ADDRESS>"}]
			},
			"python": {
				"args": [
					"runserver",
					"0.0.0.0:8000",
					"--nothreading",
					"--noreload"
				],
				"file": "manage.py"
			},
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}